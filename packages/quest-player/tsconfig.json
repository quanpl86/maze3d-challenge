// packages/quest-player/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    // Bắt buộc phải có "composite": true khi dự án này được tham chiếu bởi dự án khác
    "composite": true,
    // Các tùy chọn quan trọng để tạo file định nghĩa kiểu (.d.ts)
    "declaration": true,
    "declarationMap": true,
    // Cho phép import các file .json,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  // Bao gồm tất cả các file .ts và .tsx trong thư mục src VÀ file theme.ts ở gốc
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.json", "theme.ts", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}