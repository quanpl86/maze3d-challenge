{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/quest-player": ["../../packages/quest-player/src"],
      "@repo/quest-player/*": ["../../packages/quest-player/src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["vite/client"],
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/quest-player" }]
}